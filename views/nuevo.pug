extends layout

block content
  h2 Nueva persona:
  form(action="/nuevo", method="post")
    .form-group
      label(for='nombre') Nombre
      input#nombre.form-control(type='text', name='nombres' placeholder='Nombre')
    .form-group
      label(for='apellidos') Apellidos
      input#apellidos.form-control(type='text', name='apellidos', placeholder='Apellidos')
    .form-group
      label(for='telefono') Teléfono
      input#telefono.form-control(type='tel', name='telefono', placeholder='Teléfono')
    button.btn.btn-primary(type='submit') Enviar
